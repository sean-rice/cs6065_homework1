@model UserInfo

@{
    ViewData["Title"] = "View/edit your user info";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <section>
            <h5>your user info</h5>
            @if (Model == null || (Model.FirstName.Equals(string.Empty) && Model.LastName.Equals(string.Empty)))
            {
                <p>you don't have any user info yet!</p>
            }
            else
            {
                <p>first name: @Model.FirstName</p>
                <p>last name: @Model.LastName</p>
                <p>email: @Model.Email</p>
            }
        </section>
    </div>
    <div class="col-md-4">
        <section>
            <form asp-action="ModifyUserInfo" method="POST">
                <h5>add/update your user info</h5>
                <div class="form-group">

                    <label>first name</label>
                    <input asp-for="FirstName" class="form-control" value="" />
                </div>
                <div class="form-group">
                    <label>last name</label>
                    <input asp-for="LastName" class="form-control" value="" />
                </div>
                <div class="form-group">
                    <label>email</label>
                    <input asp-for="Email" class="form-control" value="" />
                </div>
                <button type="submit" class="btn btn-primary">submit</button>
            </form>
        </section>
    </div>

</div>
